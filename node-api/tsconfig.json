{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "es2019",
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": "src",
    "strict": true,
    "rootDirs": [
      "src",
      "tests"
    ],
    "paths": {
      "@/src/*": [
        "../src/*"
      ]
    }
  },
  "include": [
    "src",
    "tests"
  ],
  "exclude": []
}